{
  "name": "mcp-memory-enhanced",
  "version": "0.6.3",
  "description": "Enhanced MCP memory server with SQLite backend for improved performance and scalability",
  "license": "MIT",
  "author": "Anthropic, PBC (https://anthropic.com)",
  "homepage": "https://github.com/JamesPrial/mcp-memory-enhanced",
  "bugs": "https://github.com/JamesPrial/mcp-memory-enhanced/issues",
  "type": "module",
  "bin": {
    "mcp-server-memory": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:bench": "vitest bench",
    "benchmark": "NODE_OPTIONS='--expose-gc' vitest bench test/benchmarks/suites",
    "benchmark:validate": "NODE_OPTIONS='--expose-gc' tsx scripts/run-benchmarks.ts validate",
    "benchmark:full": "NODE_OPTIONS='--expose-gc' tsx scripts/run-benchmarks.ts full",
    "benchmark:compare": "tsx scripts/run-benchmarks.ts compare",
    "benchmark:ci": "NODE_OPTIONS='--expose-gc' tsx scripts/run-benchmarks.ts ci",
    "benchmark:quick": "NODE_OPTIONS='--expose-gc' vitest bench test/benchmarks/quick-performance.bench.ts --run",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "start:http": "TRANSPORT_TYPE=http npm start",
    "start:sse": "TRANSPORT_TYPE=sse npm start"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.0.1",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.2.0",
    "express": "^4.21.2",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.17.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "c8": "^10.1.3",
    "commander": "^12.0.0",
    "eslint": "^9.20.0",
    "shx": "^0.3.4",
    "tsx": "^4.7.0",
    "typescript": "^5.6.2",
    "vitest": "^3.2.4"
  }
}
